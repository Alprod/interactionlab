{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="max-w-full mx-10 lg:max-w-md lg:mx-auto my-5 py-5">
        <h1 class="text-2xl font-semibold my-5 dark:text-gray-100">Réinitialiser votre mot de passe</h1>

        {{ form_start(resetForm) }}
            {{ form_label(resetForm.plainPassword.first) }}
            {{ form_widget(resetForm.plainPassword.first) }}

            {{ form_label(resetForm.plainPassword.second) }}
            {{ form_widget(resetForm.plainPassword.second) }}
            <span class="text-sm text-red-600 italic">
                {{ form_errors(resetForm.plainPassword.first) }}
            </span>
            <button class="btn-blue my-5">Réinitialiser votre mot de passe</button>
        {{ form_end(resetForm) }}

    </div>
{% endblock %}
